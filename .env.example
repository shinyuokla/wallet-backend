# 伺服器設定
PORT=3000

# 管理員登入帳號密碼，請自行自訂
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your_secure_password

# JWT 設定 (建議使用 openssl rand -base64 48 生成)
JWT_SECRET=change_this_to_a_secure_random_string
# 登入效期預設 1 年
JWT_EXPIRES_IN=365d

# Google Sheets 頁面 ID 設定
GOOGLE_SHEET_ID=your_google_sheet_id_here


# Google Service Account 設定 (從 JSON 金鑰檔案取得)
# 注意：TYPE 固定為 service_account
GOOGLE_SA_TYPE=service_account
GOOGLE_SA_PROJECT_ID=your_project_id
GOOGLE_SA_PRIVATE_KEY_ID=your_private_key_id
GOOGLE_SA_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE...\n-----END PRIVATE KEY-----\n"
GOOGLE_SA_CLIENT_EMAIL=your_service_account_email@project.iam.gserviceaccount.com
GOOGLE_SA_CLIENT_ID=your_client_id